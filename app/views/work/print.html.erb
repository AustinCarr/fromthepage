<%= render({ :partial => '/shared/work_tabs', :locals => { :selected => 5, :work_id => @work }}) %>

<%= form_tag({ :controller => 'print', :action => 'make_pdf.pdf'}) do %>
  <%= hidden_field_tag('work_id', @work.id ) %>

  <%= field_set_tag 'Footnotes' do %>
    <%= check_box_tag('name_footnotes') %> Expand subject full names in footnotes<br>
    <%= check_box_tag('name_footnotes') %> Include subject articles as footnotes<br>
  <% end %>

  <%= field_set_tag 'Print Size' do %>
    <%= radio_button_tag('visual_acuity', 'normal', true) %> Normal<br>
    <%= radio_button_tag('visual_acuity', 'large-type', false) %> Large Type<br>
    <%= radio_button_tag('visual_acuity', 'tiny', false) %> Tiny<br>
  <% end %>

  <%= submit_tag 'Create PDF' %>
<% end %>