=form_for(:transcription_field, url: {action: :add_field}) do |f|
  =hidden_field_tag(:collection_id, @collection.id)
  =f.label :label
  =f.text_field :label
  =f.label :input_type
  =f.select(:input_type, TranscriptionField::INPUTS)
  =f.label :options
  =f.text_field :options
  =f.label :line_number
  =f.text_field :line_number
  =f.button 'Submit'