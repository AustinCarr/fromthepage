=render({ :partial => 'owner_header', :locals => { :selected => 3 } })
h2.nomargin ="Contributions Between #{@start_deed} and #{@end_deed}"
h4.normargin Select a new date range

=form_tag(summary_path(@owner), method: "get") do
  =hidden_field_tag(:collection_id, @collection)
  =label_tag(:start_date, "Start date")
  |  
  =text_field_tag(:start_date, @start_deed, style: "width:30%")
  |  
  =label_tag(:end_date, "End date")
  |  
  =text_field_tag(:end_date, @end_deed, style: "width:30%")
  |  
  =submit_tag("Update")
br/

=render ({partial: 'statistics/owner_statistics', :locals => {start_date: @start_date, end_date: @end_date}})

h3 All Collaborator Emails
p#collaborators
  -unless @all_collaborators.empty?
    =@all_collaborators
  -else
    |No collaborators

-content_for :javascript
  =javascript_include_tag 'datepicker/datepicker'
  javascript:
    //Attach a date picker for start and end dates
    datePickerController.createDatePicker({
        formElements:{
            "start_date":"%M %d, %Y"
        },
        rangeHigh: new Date(),
        noFadeEffect: true
    });

    datePickerController.createDatePicker({
        formElements:{
            "end_date":"%M %d, %Y"
        },
        rangeHigh: new Date(),
        noFadeEffect: true
    });
