-tabs = [{\
  :name => 'Your Works',
  :selected => 1,
  :options => {\
    :action => 'owner',
  },
},{\
  :name => 'Staging Area',
  :selected => 2,
  :options => {\
    :action => 'staging',
  },
},{\
  :name => 'Omeka Import',
  :selected => 3,
  :options => {\
    :action => 'omeka',
  },
}]

.headline
  h1.headline_title Owner Dashboard
  .headline_aside
    dl.dropdown.right
      dt.h5
        span Actions
        =svg_symbol '#big-menu', class: 'icon icon-big'
      dd
        =link_to 'Create a Work', { :controller => 'work', :action => 'new' }, :data => { litebox: { hash: 'create-work' } }
        =link_to 'Create a Collection', { :controller => 'collection', :action => 'new' }, :data => { litebox: { hash: 'create-collection' } }
        =link_to 'Create an Image Set', { :controller => 'transform' }, :data => { litebox: { hash: 'create-imageset' } }
        hr
        =link_to 'Import From Archive.org', { :controller => 'ia', :action => 'ia_book_form' }, :data => { litebox: { hash: 'import-ia' } }
        hr
        =link_to 'Explore OAI Repositories', { :controller => 'oai', :action => 'repository_list' }

section.owner-counters
  .counter(data-prefix="#{number_with_delimiter @collections.length}") #{'Collection'.pluralize(@collections.length)}
  .counter(data-prefix="#{number_with_delimiter @works.length}") #{'Work'.pluralize(@works.length)}
  .counter(data-prefix="#{number_with_delimiter @ia_works.length}") #{'IA work'.pluralize(@ia_works.length)}
  .counter(data-prefix="#{number_with_delimiter @image_sets.length}") #{'Image set'.pluralize(@image_sets.length)}
  .counter(data-prefix="#{number_with_delimiter @notes.length}") #{'Note'.pluralize(@notes.length)}

.tabs
  -for tab in tabs
    =link_to_unless tab[:selected] == selected, tab[:name], tab[:options]
      a.active =tab[:name]
