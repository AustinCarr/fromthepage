<div class="two-columns">
	<div class="left-column">
		<div class="inside-column">


			<h1>Omeka Sites</h1>
			<p>
				These Omeka sites have been connected to FromThePage.  Choose one to explore collections to import.
			</p>

			<ul>
				<% @omeka_sites.each do |omeka_site| %>
				  <li>
				  	<%= link_to omeka_site.title, omeka_site %> 
				  	(<%= link_to 'Edit', edit_omeka_site_path(omeka_site) %>)
				  </li>
				<% end %>
				
			</ul>

			<br />

			<%= link_to 'Connect to a New Omeka Site', new_omeka_site_path %>

	    </div>
	</div>
	<div class="right-column">

	    <div class="inside-column">
              <%= html_block('right') %>
	    </div>
	</div>
</div>


