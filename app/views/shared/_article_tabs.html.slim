-article_show_options = { :controller => 'article',
                    :action => 'show',
                    :article_id => article_id }

-article_edit_options = { :controller => 'article',
                      :action => 'edit',
                      :article_id => article_id }

-article_version_list_options = { :controller => 'article_version',
                    :action => 'list',
                    :article_id => article_id }

-article_graph_options = { :controller => 'article',
                    :action => 'graph',
                    :article_id => article_id }

.tabs
  =link_to 'Subject', article_show_options, :class => ('active' if selected == 1)

  -if user_signed_in?
    =link_to 'Edit', article_edit_options, :class => ('active' if selected == 4)

  =link_to 'Versions', article_version_list_options, :class => ('active' if selected == 2)
  =link_to 'Graph', article_graph_options, :class => ('active' if selected == 3)