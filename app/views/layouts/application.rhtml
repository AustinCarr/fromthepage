<html>
<head>
  <% if @page && @work && @collection
       title = "#{@collection.title} -- #{@work.title} -- #{@page.title} (FromThePage)"
     elsif @work && @collection
       title = @collection.title + ' -- ' + @work.title + ' (FromThePage)'
     elsif @article && @collection
       title = @collection.title + ' -- ' + @article.title + ' (FromThePage)'
     elsif @collection && @collection.title
       title = @collection.title + ' (FromThePage)'
     else
       title = 'FromThePage'
     end
  %>
  <title><%= title %></title>
  <%=  javascript_include_tag :defaults %>  
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'transcribe' %>
  
</head>
<body>

  <div id="undernav">
    <%= link_to('Dashboard', { :controller => 'dashboard',
                               :ol => 'l_hd_dlink' }) %> |     
    <% if logged_in? %>
	    <%= link_to('Log out', { :controller => 'account', 
	                             :action => 'logout',
                               :ol => 'l_hd_lo' }) %>
    <% else %>
	    <%= link_to('Log in', { :controller => 'account', 
	                            :action => 'login',
                               :ol => 'l_hd_li' }) %>
	    |
	    <%= link_to('Sign Up', { :controller => 'account', 
	                             :action => 'signup',
                               :ol => 'l_hd_signup' }) %>
    <% end %>
  </div>

   <div id="header">
      <h2 class="site-logo">
        <%= link_to('FromThePage', 
                    { :controller => 'static',
                      :action => 'splash',
                      :ol => 'l_hd_logo' },
                    { :class => 'site-logo' }) %>
      </h2>
    </div>
    <div id="work-logo">
      <% if (@work && @work.title) || (@collection && @collection.title) %>
        <h1 class="work-logo">
	        <% if @collection %>
		        <%= link_to(@collection.title,
		                    { :controller => 'collection',
		                      :action => 'show',
		                      :collection_id => @collection.id,
                          :ol => 'l_hd_c_link' }) %>
	        <% end %>
	        <%= "&mdash;" if @collection && @work %>
	        <% if @work && @work.title %>
		        <%= link_to(@work.title,
		                    { :controller => 'display',
		                      :action => 'read_work',
		                      :work_id => @work.id,
                          :ol => 'l_hd_w_link' }) %>
	        <% end %>
        </h1>
      <% end %>
    </div>

<% if(flash[:notice]) %>
        <p style="color: green"><%= flash[:notice] %></p>
<% end %>
<% if(flash[:error]) %>
        <p style="color: red"><%= flash[:error] %></p>
<% end %>

<div><!-- layout content -->
<%= @content_for_layout %>
</div><!-- layout content -->
</body>
</html>
