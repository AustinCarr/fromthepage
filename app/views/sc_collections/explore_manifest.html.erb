<p id="notice"><%= notice %></p>

<% if @sc_collection %>
	<p>
		Back to <%= link_to @sc_collection.label, { :action => 'explore', :sc_collection_id => @sc_collection, :at_id => CGI::escape(@sc_collection.at_id) }%>
	</p>
<% end %>

<p>
  <strong>Manifest:</strong>
  <%= @sc_manifest.label %>
</p>

<% if @sc_manifest.service.description %>
	<p>
		<strong>Description:</strong>
		<%= raw(@sc_manifest.service.description) %>	
	</p>
<% end %>


<% if @sc_manifest.service.metadata %>
	<p>
		<strong>Metadata:</strong>
		<%= raw(@sc_manifest.html_metadata) %>
	</p>
<% end %>


<% if @sc_manifest.service.license %>
	<p>
		<strong>License:</strong>
		<%= @sc_manifest.service.license %>	
	</p>
<% end %>

<p>
  <strong>Id:</strong>
  <%= link_to @sc_manifest.at_id, @sc_manifest.at_id %>
</p>

<% if @sc_collection %>
<%= link_to "Import", {:controller => 'sc_collections', :action => 'import_manifest', :at_id => CGI::escape(@sc_manifest.at_id), :sc_collection_id => @sc_collection.id }, { :class => 'button outline' } %>
<% else %>
<%= link_to "Import", {:controller => 'sc_collections', :action => 'import_manifest', :at_id => CGI::escape(@sc_manifest.at_id) }, { :class => 'button outline' } %>
<% end %>

<h4>Canvases:</h4>

<ul>
	<% @sc_manifest.service.sequences.first.canvases.each do |json_canvas| %>
	  <li>
	    <%= json_canvas.label %>
	  </li>
	<% end %>
	
</ul>
